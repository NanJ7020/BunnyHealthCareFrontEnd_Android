<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoopTest">

    <ImageView
        android:id="@+id/healthPoop"
        android:layout_width="299dp"
        android:layout_height="190dp"
        android:onClick="healthP_func"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021"
        app:srcCompat="@drawable/healthy_poops" />

    <ImageView
        android:id="@+id/cecalPoop"
        android:layout_width="298dp"
        android:layout_height="178dp"
        android:onClick="cecalP_func"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthPoop"
        app:layout_constraintVertical_bias="0.046"
        app:srcCompat="@drawable/cecal_poop" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="301dp"
        android:layout_height="64dp"
        android:text="There is no choice such as my bunny's poop :("
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cecalPoop"
        app:layout_constraintVertical_bias="0.048" />

    <Button
        android:id="@+id/SearchByGoogleButton"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:text="Search by Google"
        android:textSize="24sp"
        android:onClick="searchByGoogle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.057" />

</androidx.constraintlayout.widget.ConstraintLayout>