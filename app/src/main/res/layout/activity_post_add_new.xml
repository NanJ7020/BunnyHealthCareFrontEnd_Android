<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".Posts.PostAddNewActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:onClick="vetSearchList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|right"
            android:text="Vet search List"
            android:textColor="@color/Font2Color"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/npVetName_textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="vet name"
            android:textColor="@color/Font1Color"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Title:"
                android:textColor="@color/FontColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/npTitle_textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="post title"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Address:"
                android:textColor="@color/FontColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/npAddress_textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="address"
                android:layout_weight="1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Phone:"
                android:textColor="@color/FontColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/npPhone_textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="Phone"
                android:layout_weight="1"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">


                    <CheckBox
                        android:id="@+id/np_checkCareBunny"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Take care of Bunny"
                        android:textStyle="bold"
                        android:textColor="@color/Font2Color"
                        android:textSize="20sp"
                        android:checked="false"/>


                    <CheckBox
                        android:id="@+id/np_checkSpay"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Spay/ Neutered"
                        android:textStyle="bold"
                        android:textColor="@color/Font2Color"
                        android:textSize="20sp"
                        android:layout_weight="2"
                        android:checked="false"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">


                    <CheckBox
                        android:id="@+id/np_checkNailTrim"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Nail Trim"
                        android:textStyle="bold"
                        android:textColor="@color/Font2Color"
                        android:textSize="20sp"
                        android:layout_weight="2"
                        android:checked="false"/>




                    <CheckBox
                        android:id="@+id/np_checkLab"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Labtory"
                        android:textStyle="bold"
                        android:textColor="@color/Font2Color"
                        android:textSize="20sp"
                        android:layout_weight="2"
                        android:checked="false"/>




            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">


                    <CheckBox
                        android:id="@+id/np_checkGIstasis"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="GI stasis"
                        android:textStyle="bold"
                        android:textColor="@color/Font2Color"
                        android:textSize="20sp"
                        android:layout_weight="2"
                        android:checked="false"/>



                    <CheckBox
                        android:id="@+id/np_checkFlea"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Flea Cheak"
                        android:textStyle="bold"
                        android:textColor="@color/Font2Color"
                        android:textSize="20sp"
                        android:layout_weight="2"
                        android:checked="false"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:background="@color/colorPrimary"
        android:onClick="newPost"
        android:text="Post a new Review"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

</LinearLayout>